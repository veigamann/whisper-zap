generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model WhitelistedUser {
  id      Int     @id @default(autoincrement())
  userId  String  @unique
  isAdmin Boolean @default(false)
}

model GlobalSetting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model ChatSetting {
  id     Int    @id @default(autoincrement())
  chatId String
  key    String
  value  String

  @@unique([chatId, key])
}
